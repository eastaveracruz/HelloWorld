        <!--<location>/error404.html</location>-->
    <!--</error-page>-->

    <error-page>
        <error-code>405</error-code>
        <location>/error405.html</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>



    <!-- part 2 -->

    <listener>
        <listener-class>edu.films.web.ProjectRegistry</listener-class>
    </listener>

    <servlet>
        <servlet-name>Books</servlet-name>
        <servlet-class>edu.films.controller.BooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <!-- diff error pages -->

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error404.jsp</location>
    </error-page>



</web-app>